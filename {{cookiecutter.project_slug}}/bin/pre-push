#!/usr/bin/env bash

isort --recursive --check-only {{ cookiecutter.package_name }}
if [ $? -ne 0 ]; then
  echo "[!] isort failed! Run 'isort -rc -y'"
  exit 1
fi
echo "[+] isort success!"

{% if cookiecutter.use_black|lower == 'y' -%}
black -S -l 79 --check {{ cookiecutter.package_name }}
if [ $? -ne 0 ]; then
  echo "[!] black failed! Run 'black -S -l 79 {{ cookiecutter.package_name }}'"
  exit 1
fi
echo "[+] black success!"
{%- endif %}

pylint {{ cookiecutter.package_name }}
if [ $? -ne 0 ]; then
  echo "[!] pylint failed! Please fix code before push"
  exit 1
fi
echo "[+] pylint success!"

{% if cookiecutter.use_mypy|lower != 'do not use' -%}
mypy {{ cookiecutter.package_name }}
if [ $? -ne 0 ]; then
  echo "[!] mypy failed! Please fix code before push"
  exit 1
fi
echo "[+] mypy success!"
{%- endif %}

exit 0
