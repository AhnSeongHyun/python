#!/usr/bin/env bash

isort --recursive --check-only
if [ $? -ne 0 ]; then
  echo "[!] isort failed! Run 'isort -rc -y'"
  exit 1
fi
echo "[+] isort success!"

{%- if cookiecutter.use_black|lower == 'y' %}
black -S -l 79 --check .
if [ $? -ne 0 ]; then
  echo "[!] black failed! Run 'black -S -l 79 .'"
  exit 1
fi
echo "[+] black success!"
{%- endif %}

pylint **/*.py
if [ $? -ne 0 ]; then
  echo "[!] pylint failed! Please fix code before commit"
  exit 1
fi
echo "[+] pylint success!"

exit 0
